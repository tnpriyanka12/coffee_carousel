<div style = "color:red; font-size:20px">
<%=flash[:error]%>
</div>

<%= form_for @user ,:validate => true  do |form| %>

  <div class="field">
    <div class="col-lg-6">
    <%= form.label :name, 'Name(Must have atleast 2 characters)' %>
    <%= form.text_field :name, class:"form-control" %>
    </div>
  </div>

  <div class="field">
    <div class="col-lg-6">

    <%= form.label :email , 'E-mail(Provide valid email)'%>
    <%= form.text_field :email, class:"form-control" %>
  </div>
  </div>

    <div class="field">
      <div class="col-lg-6">

      <%= form.label :phone_number, 'Phone Number (Format 000-000-0000)' %>
      <%= form.text_field :phone_number, class:"form-control" %>
    </div>
      </div>

  <div class="field">
    <div class="col-lg-6">
    <%= form.label :password, 'Password (Need atleast 8 characters, 1 digit, 1 Uppercase Letter and 1 Lower case letter)' %>
    <%= form.password_field :password, class:"form-control" %>
    </div>
  </div>

  <div class="field">
    <div class="col-lg-6">
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation, class:"form-control"  %>
    </div>
  </div>


  <div class="field">
    <div class="col-lg-6">
    <%= form.label :description %>
    <%= form.text_area :description, class:"form-control"  %>
  </div>
  </div>

  <div class="actions">
    <div class="col-lg-6">

    <%= form.submit %>
  </div>
</div>

<% end %>
